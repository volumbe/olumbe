---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { Projects } from "../components/Projects.tsx";
import YC from "../images/y18.svg";
import Penn from "../images/penn.png";

---

<Layout title="👨🏿‍💻">
	<main class="flex flex-col px-8 py-4 text-center w-full max-w-screen-lg max-h-screen">
		<h1 class="name [--slidein-delay:200ms]">Vivek Olumbe</h1>
		<div class="flex flex-col gap-3 sm:gap-6 text-center items-center mb-4">
			<p class="badge opacity-0 [--slidein-delay:300ms]">
				Backed by <Image
					src={YC}
					alt="Y Combinator"
					class="logo"
					loading={"eager"}
				/>
				<span class="text-[#E96F37]">Combinator</span>
			</p>
			<p class="badge [--slidein-delay:400ms]">
				Taught at <Image
					src={Penn}
					alt="UPenn"
					class="logo"
					loading={"eager"}
				/>
				<span class="text-[#011F5B]">Penn</span>
			</p>
			<p class="badge [--slidein-delay:500ms]">Raised in Philly</p>
			<p class="badge [--slidein-delay:600ms]">Made in 🌍</p>
		</div>
		<Projects client:only/>
	</main>
</Layout>

<style>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer components {
		.name {
			@apply text-4xl sm:text-5xl font-extrabold tracking-wide uppercase animate-slidein opacity-0 text-center pb-8 z-40;
		}
		.badge {
			@apply flex items-center gap-1 bg-slate-200 bg-opacity-40 w-fit px-4 py-[0.1rem] rounded-full justify-center animate-slidein opacity-0;
		}
		.logo {
			@apply inline rounded-sm object-cover w-4;
		}
	}
</style>
